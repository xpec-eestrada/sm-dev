<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.top">
			<block class="Plazathemes\Bannerslider\Block\Bannerslider" name="Banner" template="bannerslider.phtml"/>	
        </referenceContainer>
		<referenceContainer name="main.content">  
			<block class="Magento\Cms\Block\Block" name="static_top" before="-">
				<arguments>
					<argument name="block_id" xsi:type="string">static_top_facon1</argument>
				</arguments>
			</block>
			<block class="Magento\Cms\Block\Block" name="static_middle" after="static_top">
				<arguments>
					<argument name="block_id" xsi:type="string">static_middle_facon1</argument>
				</arguments>
			</block>
			<block class="Magento\Cms\Block\Block" name="category_tab" after="static_middle">
				<arguments>
					<argument name="block_id" xsi:type="string">category_tab</argument>
				</arguments>
			</block>
			<block class="Plazathemes\Testimonial\Block\Testimonial" name="Testimo" after="category_tab" template="testimonial.phtml" ></block>
			<block class="Magento\Cms\Block\Block" name="patrocinios" after="Testimo">
				<arguments>
					<argument name="block_id" xsi:type="string">patrocinio_block</argument>
				</arguments>
			</block>
			<block class="Magento\Newsletter\Block\Subscribe" name="form.subscribe" as="subscribe" after="patrocinios" template="subscribe.phtml"/>
		</referenceContainer> 
    </body>
</page>
